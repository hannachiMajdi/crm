{% extends 'base.html.twig' %}
{% block title %}
   {{ contact.nom }}
{% endblock %}

{% block body %}
    <div id="wrapper">

        {{ include('modulesUsed/menu.html.twig') }}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">{{ contact.nom }}
                    <div class="btn-toolbar pull-right">
                        {{ form_start(delete_form) }}
                        <input type="submit" type="button" class="btn btn-danger" value="Supprimer" onclick="alert('Contact supprimé!');">
                        {{ form_end(delete_form) }}
                    </div>
                    </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Nom</th>
                            <td>{{ contact.nom }}</td>
                        </tr>
                        <tr>
                            <th>Fonction</th>
                            <td> {{ contact.fonction }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ contact.email }}</td>
                        </tr>
                        <tr>
                            <th>téléphone</th>
                            <td>{{ contact.tel }}</td>
                        </tr>
                        <tr>
                            <th>pseudo</th>
                            <td>{{ contact.user.username }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="row text-center">
                          <div class="btn-group">
                              <a type="button" class="btn btn-success" href="{{ path('contact_index') }}">
                                  <i class="fa fa-angle-double-left"></i>
                                  Liste des contacts</a>
                              <a type="button" class="btn btn-warning" href="{{ path('contact_edit', { 'id': contact.id }) }}">Modifier</a>
                          </div>
                    </div>



                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
{% endblock %}