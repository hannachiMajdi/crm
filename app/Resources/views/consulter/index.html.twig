{% extends 'base.html.twig' %}
{% block title %}
    Affaires
{% endblock %}

{% block body %}
    <div id="wrapper">

        {{ include('modulesUsed/menu.html.twig') }}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div> <h1 class="page-header col-lg-10">Liste des Affaires</h1>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>Ref</th>
                                    <th>Etat</th>
                                    <th>Contact</th>
                                    <th>Type d'affaire</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for affaire in affaires %}
                                    <tr>
                                        <td>{{ affaire.ref }}</td>
                                        <td>{{ affaire.etat }}</td>
                                        <td>{{ affaire.contact }}</td>
                                        <td>
                                            {% if affaire.facture %}Facture
                                            {% elseif affaire.commande %}Commande
                                            {% elseif affaire.devis %}Devis
                                            {% endif %}                                        </td>
                                        <td>
                                            <a href="{{ path('consulter_affaire_show', { 'id': affaire.id }) }}">
                                                <button type="button" class="btn btn-success btn-lg btn-block">Consulter
                                                    <i class="fa fa-angle-double-right"></i></button>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
{% endblock %}