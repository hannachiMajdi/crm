{% extends 'base.html.twig' %}
{% block title %}
    {{ affaire.ref }}
{% endblock %}

{% block body %}
    <div id="wrapper">

        {{ include('modulesUsed/menu.html.twig') }}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">  {{ affaire.ref }}
                    </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Ref</th>
                            <td>{{ affaire.ref }}</td>
                        </tr>
                        <tr>
                            <th>Etat</th>
                            <td>{{ affaire.etat }}</td>
                        </tr>
                        <tr>
                            <th>Contact</th>
                            <td>{{ affaire.contact }}</a></td>
                        </tr>
                        <tr>
                          <th>Type d'affaire</th>
                          <td>
                              {% if affaire.facture %}Facture
                              {% elseif affaire.commande %}Commande
                              {% elseif affaire.devis %}Devis
                              {% endif %}
                          </td>
                        </tr>
                        <tr>
                            <th>action</th>
                            <td>{% if affaire.devis %}
                                    <a class="btn btn-primary" href="{{ path('consulter_devis_show',{'id':affaire.devis.id}) }}">Consulter Devis</a>
                                {% endif %}
                                {% if affaire.commande %}
                                    <a class="btn btn-primary" href="{{ path('consulter_commande_show',{'id':affaire.commande.id}) }}">Consulter Commande</a>
                                {% endif %}
                                {% if affaire.facture %}
                                    <a class="btn btn-primary" href="{{ path('consulter_facture_show',{'id':affaire.facture.id}) }}">Consulter Facture</a>
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
{% endblock %}