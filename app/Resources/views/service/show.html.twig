{% extends 'base.html.twig' %}
{% block title %}
    Service
{% endblock %}

{% block body %}
    <div id="wrapper">

        {{ include('modulesUsed/menu.html.twig') }}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Service
                    <div class="btn-toolbar pull-right">
                        {{ form_start(delete_form) }}
                        <input type="submit" type="button" class="btn btn-danger" value="Supprimer" onclick="alert('Service SupprimÃ©!');">
                        {{ form_end(delete_form) }}
                    </div>
                    </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Ref</th>
                            <td>{{ service.ref }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ service.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>{{ service.prix }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ service.description }}</td>
                        </tr>
                        </tbody>
                    </table>
                       <div class="row text-center">
                           <div class="btn-group">
                               <a type="button" class="btn btn-success" href="{{ path('service_index') }}">
                                   <i class="fa fa-angle-double-left"></i>Liste des services</a>
                               <a type="button" class="btn btn-info" href="{{ path('service_edit', { 'id': service.id }) }}">Modifier</a>

                           </div>
                       </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
{% endblock %}