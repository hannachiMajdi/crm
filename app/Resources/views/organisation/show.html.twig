{% extends 'base.html.twig' %}
{% block title %}
     {{ organisation.nom }}
{% endblock %}

{% block body %}
    <div id="wrapper">

        {{ include('modulesUsed/menu.html.twig') }}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">  {{ organisation.nom }}
                    <div class="btn-toolbar pull-right ">{{ form_start(delete_form) }}
                        <input type="submit" type="button" class="btn btn-danger" value="Supprimer" onclick="alert('organisation supprimé!');">
                        {{ form_end(delete_form) }}</div>
                    </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Nom</th>
                            <td>{{ organisation.nom }}</td>
                        </tr>
                        <tr>
                            <th>Téléphone</th>
                            <td>{{ organisation.tel }}</td>
                        </tr>
                        <tr>
                            <th>Email de l'organisation</th>
                            <td>{{ organisation.email }}</td>
                        </tr>
                        <tr>
                            <th>Site web</th>
                            <td>{{ organisation.siteweb }}</td>
                        </tr>
                        <tr>
                            <th>Secteur d'activité</th>
                            <td>{{ organisation.secteur }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="row text-center">
                        <div class="btn-group">
                                <a type="button" class="btn btn-success" href="{{ path('organisation_index') }}">
                                    <i class="fa fa-angle-double-left"></i>
                                    Liste des Organisation</a>
                                <a type="button" class="btn btn-info" href="{{ path('organisation_edit', { 'id': organisation.id }) }}">Modifier</a>

                        </div>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
{% endblock %}