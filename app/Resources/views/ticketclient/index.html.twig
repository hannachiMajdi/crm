{% extends 'base.html.twig' %}
{% block title %}
    Tickets clients
{% endblock %}

{% block body %}
    <div id="wrapper">

        {{ include('modulesUsed/menu.html.twig') }}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div><h1 class="page-header col-lg-9">Liste des Tickets clients</h1>
                        <a href="{{ path('ticketclient_new') }}">
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <button type="button" class="page-header btn btn-primary">
                                <i class="glyphicon glyphicon-plus"></i>
                                Ajouter un Ticket client</button>
                        </a>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Description</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for ticketClient in ticketClients %}
                                    <tr class="odd gradeX">
                                        <td>{{ ticketClient.titre }}</td>
                                        <td>{{ ticketClient.description }}</td>
                                        <td>{% if ticketClient.date %}{{ ticketClient.date|date('Y-m-d') }}{% endif %}</td>
                                        <td class="center">
                                            <a href="{{ path('ticketclient_show', { 'id': ticketClient.id }) }}">
                                                <button type="button" class="btn btn-success btn-sm btn-block">Consulter
                                                    <i class="fa fa-angle-double-right"></i></button>
                                            </a>
                                        </td>
                                    </tr>

                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
{% endblock %}
