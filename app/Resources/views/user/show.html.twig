{% extends 'base.html.twig' %}
{% block title %}
    Utilisateur {{ user.username }}
{% endblock %}

{% block body %}
    <div id="wrapper">

        {{ include('modulesUsed/menu.html.twig') }}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">  Utilisateur {{ user.username }}</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Pseudo</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Role</th>
                            <td>{{ user.roleName }}</td>
                        </tbody>
                    </table>
                    <div class="row text-center">


                        <div class="btn-group">
                            {{ form_start(delete_form) }}

                            <a type="button" class="btn btn-success" href="{{ path('user_index') }}">
                                <i class="fa fa-angle-double-left"></i>
                                Liste des Utilisateurs</a>
                            <a type="button" class="btn btn-info" href="{{ path('user_edit', { 'id': user.id }) }}">Modifier</a>
                            <input type="submit" type="button" class="btn btn-danger" value="Supprimer" >
                            {{ form_end(delete_form) }}
                        </div>
                    </div>

                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
{% endblock %}