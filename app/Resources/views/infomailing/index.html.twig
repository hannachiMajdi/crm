{% extends 'base.html.twig' %}
{% block title %}
    Liste des Mailers
{% endblock %}

{% block body %}
    <div id="wrapper">

        {{ include('modulesUsed/menu.html.twig') }}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div><h1 class="page-header col-lg-10">Liste des Mailers</h1>
                        <a href="{{ path('service_new') }}">
                            <button type="button" class="page-header btn btn-primary">
                                <i class="glyphicon glyphicon-plus"></i>
                                Ajouter un Mailer</button>
                        </a>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Email principale</th>
                                    <th>Email secondaire</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for infoMailing in infoMailings %}
                                    <tr>
                                    <td><a href="{{ path('infomailing_show', { 'id': infoMailing.id }) }}">{{ infoMailing.id }}</a></td>
                                    <td>{{ infoMailing.emailPrincipale }}</td>
                                    <td>{{ infoMailing.emailSecondaire }}</td>
                                        <td class="center">
                                            <a href="{{ path('infomailing_show', { 'id': infoMailing.id }) }}">
                                                <button type="button" class="btn btn-success btn-sm btn-block">Consulter
                                                    <i class="fa fa-angle-double-right"></i></button>
                                            </a>
                                        </td>
                                    </tr>

                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
{% endblock %}
