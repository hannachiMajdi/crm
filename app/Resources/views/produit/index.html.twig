{% extends 'base.html.twig' %}
{% block title %}
    Produits
{% endblock %}

{% block body %}
    <div id="wrapper">

        {{ include('modulesUsed/menu.html.twig') }}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div> <h1 class="page-header col-lg-10">Liste des Produits</h1>
                        <a href="{{ path('produit_new') }}">
                            <button type="button" class="page-header btn btn-primary">
                                <i class="glyphicon glyphicon-plus"></i>
                                Ajouter un Produit</button>
                        </a>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>Ref</th>
                                    <th>Nom</th>
                                    <th>Prix Unitaire</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for produit in produits %}
                                    <tr class="odd gradeX">
                                        <td><a href="{{ path('produit_show', { 'id': produit.id }) }}">{{ produit.ref }}</a></td>
                                        <td>{{ produit.nom }}</td>
                                        <td>{{ produit.prixUnit }}</td>
                                        <td>{{ produit.description }}</td>
                                        <td>
                                            <a href="{{ path('produit_show', { 'id': produit.id }) }}">
                                                <button type="button" class="btn btn-success btn-lg btn-block">Consulter
                                                    <i class="fa fa-angle-double-right"></i></button>
                                            </a>
                                        </td>
                                    </tr>

                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
{% endblock %}
