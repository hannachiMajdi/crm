{% extends 'base.html.twig' %}
{% block title %}
    Produit
{% endblock %}

{% block body %}
    <div id="wrapper">

        {{ include('modulesUsed/menu.html.twig') }}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Produit

                    <div class="btn-toolbar pull-right">
                        {{ form_start(delete_form) }}
                        <input type="submit" type="button" class="btn btn-danger" value="Supprimer"/>
                        {{ form_end(delete_form) }}
                    </div>
                    </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Ref</th>
                            <td>{{ produit.ref }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ produit.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prix unitaire</th>
                            <td>{{ produit.prixUnit }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ produit.description }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="row text-center">
                        <div class="btn-group">
                            <a type="button" class="btn btn-success" href="{{ path('produit_index') }}">
                                <i class="fa fa-angle-double-left"></i>
                                Liste des Produits</a>
                            <a type="button" class="btn btn-info" href="{{ path('produit_edit', { 'id': produit.id }) }}">Modifier</a>
                        </div>
                    </div>



                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
{% endblock %}