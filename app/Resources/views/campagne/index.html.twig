{% extends 'base.html.twig' %}
{% block title %}
    Campagnes
{% endblock %}

{% block body %}
    <div id="wrapper">

        {{ include('modulesUsed/menu.html.twig') }}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div> <h1 class="page-header col-lg-9">Liste des Campagnes Publicitaires</h1>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="{{ path('campagne_new') }}">
                            <button type="button" class="page-header btn btn-primary">
                                <i class="glyphicon glyphicon-plus"></i>
                                Ajouter une Campagne</button>
                        </a>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for campagne in campagnes %}
                                    <tr>
                                        <td>{{ campagne.nom }}</td>
                                        <td>{% if campagne.date %}{{ campagne.date|date('Y-m-d') }}{% endif %}</td>
                                        <td>{{ campagne.description }}</td>
                                        <td class="center">
                                            <a href="{{ path('campagne_show', { 'id': campagne.id }) }}">
                                                <button type="button" class="btn btn-success btn-lg btn-block">Consulter
                                                    <i class="fa fa-angle-double-right"></i></button>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
{% endblock %}