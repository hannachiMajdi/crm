{% extends 'base.html.twig' %}
{% block title %}
   {{ campagne.nom }}
{% endblock %}

{% block body %}
    <div id="wrapper">

        {{ include('modulesUsed/menu.html.twig') }}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">   {{ campagne.nom }}
                    <div class="btn-toolbar pull-right">
                        {{ form_start(delete_form) }}
                        <input type="submit" type="button" class="btn btn-danger" value="Supprimer" onclick="alert('Campagne supprimÃ©!');">
                        {{ form_end(delete_form) }}
                    </div>
                    </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <table class="table">
                        <tbody>

                        <tr>
                            <th>Nom</th>
                            <td>{{ campagne.nom }}</td>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <td>{{ campagne.date |date('d-m-Y') }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ campagne.description }}</td>
                        </tr>
                        </tbody>
                    </table>
                   <div class="row text-center">
                       <div class="btn-group">
                           <a type="button" class="btn btn-success" href="{{ path('campagne_index') }}">
                               <i class="fa fa-angle-double-left"></i>
                               Liste des Campagnes</a>
                           <a type="button" class="btn btn-info" href="{{ path('campagne_edit', { 'id': campagne.id }) }}">Modifier</a>
                       </div>
                   </div>
                    <div class="divider"></div>
                    <h1>Liste des prospects</h1>
                    <div class="row">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Fonction</th>
                                <th>Tel</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for prospect in campagne.prospects %}
                                <tr>
                                    <td>{{ prospect.nom }}</td>
                                    <td>{{ prospect.fonction }}</td>
                                    <td>{{ prospect.tel }}</td>
                                    <td>{{ prospect.email }}</td>
                                    <td>
                                        <div class="btn btn-group">
                                            <a href="{{ path('prospect_show', { 'id': prospect.id }) }}" class="btn btn-primary">Afficher</a>
                                            <a href="{{ path('prospect_edit', { 'id': prospect.id }) }}" class="btn btn-warning">Modifier</a>
                                        </div>

                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="divider"></div>
                    <h1>Liste des contacts</h1>
                    <div class="row">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Fonction</th>
                                <th>Tel</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for contact in campagne.contacts %}
                                <tr>
                                    <td>{{ contact.nom }}</td>
                                    <td>{{ contact.fonction }}</td>
                                    <td>{{ contact.tel }}</td>
                                    <td>{{ contact.email }}</td>
                                    <td>
                                        <div class="btn btn-group">
                                            <a href="{{ path('contact_show', { 'id': contact.id }) }}" class="btn btn-primary">Afficher</a>
                                            <a href="{{ path('contact_edit', { 'id': contact.id }) }}" class="btn btn-warning">Modifier</a>
                                        </div>

                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
{% endblock %}